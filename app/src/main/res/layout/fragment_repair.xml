<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line"
    tools:context="com.bm.fusionworker.fragment.RepairFragment">

    <com.amap.api.maps.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="@dimen/dp_180"
        android:layout_height="@dimen/dp_48"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_48"
        android:background="@drawable/shadow_white_shape_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_3">

        <TextView
            android:id="@+id/tv_map"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tv_corner_blue"
            android:gravity="center"
            android:text="@string/map"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/list"
            android:textColor="@color/btn_blue" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_my_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_48"
        android:padding="5dp"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:src="@mipmap/home_ic_ps" />
</RelativeLayout>
